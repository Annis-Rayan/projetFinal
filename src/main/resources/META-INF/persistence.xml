<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="projetsopra" transaction-type="RESOURCE_LOCAL">
		<!-- provider =>implementation de jpa -->
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<!-- proprietes pour l'unité de persistance -->
		<properties>
			<!-- driver jdbc -->
			<property name="hibernate.connection.driver" value="org.postgresql.driver"/>
			<!-- url -->
			<property name="hibernate.connection.url" value="jdbc:postgresql://127.0.0.1:5432/projetsopra"/>
			<!-- login -->
			<property name="hibernate.connection.user" value="postgres"/>
			<!-- password -->
			<property name="hibernate.connection.password" value="postgres"/>
			<!-- dialect -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL95Dialect"/>
			<!-- controle de correspondance entre les entity qu'on va coder et les tables de la base -->
			<!-- validate: verification: si not OK, erreur et persistence-unit ne peut pas se créer -->
			<!-- create => on drop les tables qui correspondent aux entity du code au lancement et on crée les tables -->
			<!-- create-drop: le drop est fait après l'execution du programme -->
			<!-- update => permet d'ajouter des colonnes manquantes dans les tables -->
			<property name="hibernate.hbm2ddl.auto" value="create"/>
			
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="true"/>
		</properties>
	
	</persistence-unit>
</persistence>